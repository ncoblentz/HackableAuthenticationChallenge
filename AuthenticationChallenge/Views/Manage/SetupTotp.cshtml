@model SetupTotpViewModel
@{
    ViewData["Title"] = "Setup Totp";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Scan the Barcode below and enter your password+PIN</label>
                <img src="data:image/png;base64,@ViewData.Model.QRCodeBase64" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPasswordAndPIN"></label>
                <input type="password" asp-for="ConfirmPasswordAndPIN" class="form-control" />
                <span asp-validation-for="ConfirmPasswordAndPIN" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
